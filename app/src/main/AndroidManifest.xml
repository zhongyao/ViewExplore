<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.hongri.viewexplore">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>

                <data
                    android:host="view"
                    android:path="/main"
                    android:scheme="hongri"/>
            </intent-filter>
        </activity>
        <activity android:name=".activity.ViewEventActivity">
            <intent-filter>
                <action android:name="android.intent.action.VIEWEVENTACTIVITY"/>
                <category android:name="android.intent.category.DEFAULT"/>
                <data
                    android:host="view"
                    android:path="/viewevent"
                    android:scheme="hongri"/>
            </intent-filter>
        </activity>
        <activity android:name=".activity.ViewTheoryActivity">
            <intent-filter>
                <action android:name="android.intent.action.VIEWTHEORYACTIVITY"/>
                <category android:name="android.intent.category.DEFAULT"/>
                <data
                    android:host="view"
                    android:path="/viewtheory"
                    android:scheme="hongri"/>
            </intent-filter>
        </activity>
    </application>

</manifest>